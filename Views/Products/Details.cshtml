@model ECommerceApp.Model.Product
@{
    ViewData["Title"] = Model.Name;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Sản phẩm</a></li>
        <li class="breadcrumb-item active">@Model.Name</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
    </div>
    <div class="col-md-6">
        <span class="badge bg-primary mb-2">@Model.Category.Name</span>
        <h2>@Model.Name</h2>
        <hr>
        <h3 class="text-danger mb-4">@Model.Price.ToString("N0") ₫</h3>
        
        <div class="mb-4">
            <h5>Mô tả sản phẩm</h5>
            <p>@Model.Description</p>
        </div>
        
        <div class="mb-4">
            <p class="mb-2">
                <i class="bi bi-box-seam"></i> 
                <strong>Tình trạng:</strong> 
                @if (Model.Stock > 0)
                {
                    <span class="text-success">Còn @Model.Stock sản phẩm</span>
                }
                else
                {
                    <span class="text-danger">Hết hàng</span>
                }
            </p>
            <p class="mb-2">
                <i class="bi bi-truck"></i> <strong>Giao hàng:</strong> Miễn phí toàn quốc
            </p>
            <p class="mb-2">
                <i class="bi bi-shield-check"></i> <strong>Bảo hành:</strong> 12 tháng
            </p>
        </div>
        
        <div class="row g-3">
            <div class="col-auto">
                <label class="form-label">Số lượng:</label>
                <input type="number" id="quantity" class="form-control" value="1" min="1" max="@Model.Stock" style="width: 100px;">
            </div>
        </div>
        
        <div class="mt-4 d-flex gap-2">
            <button class="btn btn-primary btn-lg" id="addToCart" data-product-id="@Model.Id">
                <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
            </button>
            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#addToCart').click(function() {
                var productId = $(this).data('product-id');
                var quantity = $('#quantity').val();
                var button = $(this);
                
                $.ajax({
                    url: '/Cart/AddToCart',
                    type: 'POST',
                    data: { productId: productId, quantity: quantity },
                    success: function(response) {
                        if (response.success) {
                            button.html('<i class="bi bi-check"></i> Đã thêm vào giỏ');
                            button.removeClass('btn-primary').addClass('btn-success');
                            setTimeout(function() {
                                window.location.href = '/Cart';
                            }, 1000);
                        } else {
                            alert(response.message);
                        }
                    }
                });
            });
        });
    </script>
}