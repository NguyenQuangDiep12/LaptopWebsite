@model IEnumerable<ECommerceApp.Model.Product>
@{
    ViewData["Title"] = "Sản phẩm";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Danh sách sản phẩm</h2>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="btn-group" role="group">
            <a asp-action="Index" class="btn @(ViewBag.SelectedCategory == null ? "btn-primary" : "btn-outline-primary")">
                Tất cả
            </a>
            @foreach (var category in ViewBag.Categories as List<ECommerceApp.Model.Category>)
            {
                <a asp-action="Index" asp-route-categoryId="@category.Id" 
                   class="btn @(ViewBag.SelectedCategory == category.Id ? "btn-primary" : "btn-outline-primary")">
                    @category.Name
                </a>
            }
        </div>
    </div>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card product-card h-100">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 250px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <span class="badge bg-secondary mb-2">@product.Category.Name</span>
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <div class="mt-auto">
                        <p class="h5 text-danger mb-2">@product.Price.ToString("N0") ₫</p>
                        <p class="text-muted small mb-3">
                            <i class="bi bi-box-seam"></i> Còn @product.Stock sản phẩm
                        </p>
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary flex-fill">
                                <i class="bi bi-eye"></i> Chi tiết
                            </a>
                            <button class="btn btn-primary flex-fill add-to-cart" data-product-id="@product.Id">
                                <i class="bi bi-cart-plus"></i> Thêm
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.add-to-cart').click(function() {
                var productId = $(this).data('product-id');
                var button = $(this);
                
                $.ajax({
                    url: '/Cart/AddToCart',
                    type: 'POST',
                    data: { productId: productId, quantity: 1 },
                    success: function(response) {
                        if (response.success) {
                            button.html('<i class="bi bi-check"></i> Đã thêm');
                            button.removeClass('btn-primary').addClass('btn-success');
                            setTimeout(function() {
                                button.html('<i class="bi bi-cart-plus"></i> Thêm
                                button.html('<i class="bi bi-cart-plus"></i> Thêm');
                                button.removeClass('btn-success').addClass('btn-primary');
                            }, 2000);
                        } else {
                            alert(response.message);
                        }
                    }
                });
            });
        });
    </script>
}