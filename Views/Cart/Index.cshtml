@model ECommerceApp.Model.ViewModels.CartViewModel
@{
    ViewData["Title"] = "Giỏ hàng";
}

<h2 class="mb-4">Giỏ hàng của bạn</h2>

@if (!Model.Items.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Giỏ hàng của bạn đang trống.
        <a asp-controller="Products" asp-action="Index" class="alert-link">Tiếp tục mua sắm</a>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            @foreach (var item in Model.Items)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-2">
                                <img src="@item.ImageUrl" class="img-fluid rounded" alt="@item.ProductName">
                            </div>
                            <div class="col-md-4">
                                <h5>@item.ProductName</h5>
                                <p class="text-danger mb-0">@item.Price.ToString("N0") ₫</p>
                            </div>
                            <div class="col-md-3">
                                <div class="input-group">
                                    <button class="btn btn-outline-secondary btn-sm update-quantity" 
                                            data-cart-id="@item.CartItemId" 
                                            data-quantity="@(item.Quantity - 1)">
                                        <i class="bi bi-dash"></i>
                                    </button>
                                    <input type="text" class="form-control text-center" value="@item.Quantity" readonly>
                                    <button class="btn btn-outline-secondary btn-sm update-quantity" 
                                            data-cart-id="@item.CartItemId" 
                                            data-quantity="@(item.Quantity + 1)">
                                        <i class="bi bi-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <p class="h6 mb-0 text-end">@item.Subtotal.ToString("N0") ₫</p>
                            </div>
                            <div class="col-md-1 text-end">
                                <form asp-action="RemoveItem" method="post" class="d-inline">
                                    <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm" 
                                            onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Tóm tắt đơn hàng</h5>
                    <hr>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính:</span>
                        <span>@Model.TotalAmount.ToString("N0") ₫</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Phí vận chuyển:</span>
                        <span class="text-success">Miễn phí</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Tổng cộng:</strong>
                        <strong class="text-danger h5">@Model.TotalAmount.ToString("N0") ₫</strong>
                    </div>
                    <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary w-100 mb-2">
                        <i class="bi bi-credit-card"></i> Thanh toán
                    </a>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-arrow-left"></i> Tiếp tục mua sắm
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.update-quantity').click(function() {
                var cartId = $(this).data('cart-id');
                var quantity = $(this).data('quantity');
                
                if (quantity < 1) {
                    if (!confirm('Bạn có chắc muốn xóa sản phẩm này?')) {
                        return;
                    }
                }
                
                $.ajax({
                    url: '/Cart/UpdateQuantity',
                    type: 'POST',
                    data: { cartItemId: cartId, quantity: quantity },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        }
                    }
                });
            });
        });
    </script>
}